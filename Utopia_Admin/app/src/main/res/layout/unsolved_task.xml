<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Issue Name"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/un_s_name"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Device Code"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/un_s_code"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Device Location"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/un_s_location"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/yollow"
            android:gravity="center"
            android:padding="5dp"
            android:text="Issue Date"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/un_s_date"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Issue Time"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/un_s_time"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >
        <Button
            android:id="@+id/solve_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:text="Solve"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:background="@drawable/fram_border3"
            />


    </LinearLayout>

</LinearLayout>