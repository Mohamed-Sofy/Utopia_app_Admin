<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pages.IT_Unit.IT_Support.Technical_Support.Adapter.Solve_Page">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/main_border1"
                android:padding="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="dddddddddddd"
                android:textColor="@color/white"
                android:gravity="center"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@drawable/main_border2"


                    >
                    <Spinner
                        android:id="@+id/technical_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/spinner"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@drawable/main_border2"


                    >
                    <Spinner
                        android:id="@+id/solve_device_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/spinner"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/main_border1"
                >

                <TextView
                    android:id="@+id/show_device_date"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text=""
                    android:hint="Task Date"
                    android:textColorHint="@color/white"
                    android:gravity="center|left"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"

                    />

                <LinearLayout
                    android:id="@+id/device_date_btn"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@color/second_color"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/date_time_icon"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/main_border1"
                >

                <TextView
                    android:id="@+id/show_group_date"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text=""
                    android:hint="Start Time"
                    android:textColorHint="@color/white"
                    android:gravity="center|left"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"

                    />

                <LinearLayout
                    android:id="@+id/date_group_container"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@color/second_color"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/time_icon"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/main_border1"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text=""
                    android:hint="End Time"
                    android:textColorHint="@color/white"
                    android:gravity="center|left"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"

                    />

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@color/second_color"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/time_icon"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="15dp"
                    android:text=""

                    android:textSize="19dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="8dp"
                    android:background="@drawable/fram_border2"


                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:gravity="left"
                    android:maxHeight="100dp"
                    />

            </LinearLayout>


            <Button
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Save"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:textColor="@color/white"
                android:background="@drawable/fram_border3"

                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>