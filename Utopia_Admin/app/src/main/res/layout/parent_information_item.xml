<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mini_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person"
            android:padding="5dp"
            android:text="ddddddddddddddddddddddddd"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:drawablePadding="10dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="father name"
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/parent_icon"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mother name"
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/parent_icon"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ssn"
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/card_icon"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/phone_icon"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address "
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/location_icon"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stage "
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/school_icon"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="grade "
            android:textColor="@color/yollow"
            android:textSize="19dp"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/grade_icon"

            />


    </LinearLayout>

</LinearLayout>