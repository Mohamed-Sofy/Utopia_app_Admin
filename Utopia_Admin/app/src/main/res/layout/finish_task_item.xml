<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@color/colorPrimary"
    android:id="@+id/finish_item_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Task Name"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ft_name"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Description"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ft_des"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Task Date"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ft_date"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/yollow"
            android:gravity="center"
            android:padding="5dp"
            android:text="Start Time"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ft_time"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/yollow"
            android:gravity="center"
            android:padding="5dp"
            android:text="End Time"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ft_end_time"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/flat_border"

        >

        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/yollow"
            android:text="Comment"
            android:textSize="14dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ft_comment"
            android:layout_weight="2.5"
            android:textStyle="normal"
            android:text=""
            android:textSize="15dp"
            android:layout_width="0dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            />


    </LinearLayout>

</LinearLayout>