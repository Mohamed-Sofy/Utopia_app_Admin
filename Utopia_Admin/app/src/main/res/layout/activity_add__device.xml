<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Pages.IT_Unit.IT_Observations.Add_Device">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"

        >

        <LinearLayout
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"

            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/blue"
                android:background="@drawable/left"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fram_border3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/course_name_id"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add IT Device"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />


            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_name"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/white_border"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Code"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/white_border"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Location"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/white_border"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/main_border1"
                >

                <TextView
                    android:id="@+id/show_device_date"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text=""
                    android:hint="IT Device Buying Date"
                    android:textColorHint="@color/white"
                    android:gravity="center|left"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="5dp"

                    />

                <LinearLayout
                    android:id="@+id/device_date_btn"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@color/second_color"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/date_time_icon"

                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Price"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_price"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/white_border"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Certidicate"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_cer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text=""
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/white_border"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT Device Specifications in Details"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    />

                <EditText
                    android:id="@+id/device_details"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="15dp"
                    android:text=""

                    android:textSize="19dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="8dp"
                    android:background="@drawable/fram_border2"


                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:gravity="left"
                    android:maxHeight="100dp"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/add_device_btn"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Save"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:textColor="@color/white"
                android:background="@drawable/fram_border3"

                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>