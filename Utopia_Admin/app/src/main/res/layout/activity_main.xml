<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fram_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize"
        >


    </FrameLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        app:mbn_countBackgroundColor="#c46399"
        app:mbn_shadowColor="@color/colorPrimary"

        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_countTextColor="@color/colorPrimary"
        app:mbn_defaultIconColor="@color/colorPrimary"
        app:mbn_rippleColor="#eeb462"
        app:mbn_selectedIconColor="@color/colorPrimaryDark"
        />


</FrameLayout>